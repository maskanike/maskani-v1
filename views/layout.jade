    body(class='#{bodyClass}')

    nav.navbar.align-items-center.fixed-top.p-2.px-md-5.mb-3.bg-white.border-bottom.shadow-sm
      a(class="navbar-brand" href="/")
        img(class="brand brandA my-0 mr-md-auto font-weight-normal", src="/assets/img/logoA.svg")
      // button( class="navbar-toggler", type="button", data-toggle="collapse", data-target="#navbarCollapse", aria-controls="navbarCollapse", aria-expanded="false", aria-label="Toggle navigation")
        span(class="navbar-toggler-icon")

      nav(class="navbarA my-2 my-md-0 mr-md-3")
        
        // SHOW THE FOLLOWING LIST ONLY WHEN THE USER IS LOGGED OUT
        a(class=(thisPage === 'home' ? 'active p-3 text-dark' : ''), class="p-3 text-dark" href="/") Home
        a(class=(thisPage === 'features' ? 'active p-3 text-dark' : ''), class="p-3 text-dark" href="/features") Features
        a(class=(thisPage === 'pricing' ? 'active p-3 text-dark' : ''), class="p-3 text-dark" href="/pricing") Pricing
        a(class=(thisPage === 'login' ? 'active p-3 text-dark' : ''), class="p-3 text-dark" href="/login") Login
        a(class="strong cta_1 p-2 text-light btn btn-primary" href="/signup") Try for free

        // SHOW THE FOLLOWING LIST ONLY WHEN THE USER IS LOGGED IN
        a(class=(thisPage === 'dashboard' ? 'active p-3 text-dark' : ''), class="p-3 text-dark" href="/app/dashboard") Dashboard
        <!-- Manage will be replaced with Search -->
        a(class=(thisPage === 'manage' ? 'active p-3 text-dark' : ''), class="p-3 text-dark" href="#nogo") Manage
        a(class=(thisPage === 'notifications' ? 'active p-3 text-dark' : ''), class="p-3 text-dark" href="#nogo") Notifications
        a(class=(thisPage === 'myAccount' ? 'active p-3 text-dark' : ''), class="p-3 text-dark" href="#nogo") My Account
        a(class="strong cta_1 p-2 text-light btn btn-primary" href="#nogo") + Add

    .equalizer


    block content

